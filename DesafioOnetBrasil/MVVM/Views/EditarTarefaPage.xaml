<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DesafioOnetBrasil.Views.EditarTarefaPage"
             xmlns:viewmodels="clr-namespace:DesafioOnetBrasil.ViewModels"
             xmlns:models="clr-namespace:DesafioOnetBrasil.Models"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             Title="{Binding Title}">

    <!--<Shell.TitleView>
        <Grid ColumnDefinitions="*, 50">
            <Label Text="{Binding Title}"
                   VerticalOptions="Center"
                   TextColor="{StaticResource SecondaryDarkText}"
                   FontSize="20"/>
            <ImageButton Source="{x:Static models:Icons.Delete}" 
                     Style="{x:StaticResource MaterialIcon }"
                     Grid.Column="1"
                     HeightRequest="50"
